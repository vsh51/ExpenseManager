<style>
    .nav-item {
        margin-left: 1rem;
        margin-right: 1rem;
    }
</style>

<nav class="navbar sticky-top navbar-expand-lg bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">EM</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <% if (session.user) { %>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li id="inc" class="nav-item">
                    <a class="nav-link" href="/incomes/page/1">Incomes</a>
                </li>
                <li id="exp" class="nav-item">
                    <a class="nav-link" href="/expenses/page/1">Expenses</a>
                </li>
                <li id="set" class="nav-item">
                    <a class="nav-link" href="/settings">Settings</a>
                </li>
            </ul>        
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link so">Log Out</a></li>
            </ul>
            <% } else { %>
                <ul class="navbar-nav ms-auto">
                    <li id="reg" class="nav-item"><a class="nav-link" href="/auth/signup">Register</a></li>
                    <li id="li" class="nav-item"><a class="nav-link" href="/auth/signin">SignIn</a></li>
                </ul>
            <% } %>
      </div>
    </div>

    <% if (session.user) { %>
        <script>
            const so_btn = document.querySelector('a.so');
            so_btn.addEventListener('click', (e) => 
            {
                const endpoint = '/auth/signout';
                fetch(endpoint, { method: 'DELETE' })
                    .then((response) => {
                        response.json()
                            .then((res) => {
                                window.location.href = res.url;
                            });
                    })
                    .catch((err) => { console.log(err) });
            })
        </script>
    <% } %>
  </nav>